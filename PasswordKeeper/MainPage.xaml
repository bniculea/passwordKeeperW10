<Page
    x:Class="PasswordKeeper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PasswordKeeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="52,66,0,0" VerticalAlignment="Top" Width="191" Click="btnAdd_Click"/>
        <Button x:Name="s" Content="Display" HorizontalAlignment="Left" Margin="52,136,0,0" VerticalAlignment="Top" Width="191" Click="btnDisplay_Click"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="378" Margin="52,200,0,0" VerticalAlignment="Top" Width="298" SelectionChanged="listView_SelectionChanged"/>
        <Button x:Name="btnDrop" Content="Delete Table" HorizontalAlignment="Left" Margin="285,66,0,0" VerticalAlignment="Top" Width="189" Click="btnDrop_Click"/>

    </Grid>
</Page>
